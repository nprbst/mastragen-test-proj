---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <nav class="bg-bg-secondary border-b border-border-color">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center gap-8">
        <a href="/" class="font-semibold text-text-primary hover:text-accent-primary transition-colors duration-300">
          Dashboard
        </a>
        <a href="/chat" class="text-text-secondary hover:text-text-primary transition-colors duration-300">
          Chat
        </a>
      </div>
    </nav>
    <main class="max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
